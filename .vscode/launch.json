    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Training",
            "type": "bashdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "torchrun",
            "args": [
                "--nnodes", "1",
                "--nproc_per_node", "8",
                "src/finetuning.py"
            ]
        },
        {
            "name": "Merge PEFT Model",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/merge_lora_weights.py",
            "args": [
                "--base_model", "../models/LlamaGuard-7b",
                "--peft_model", "../models/output",
                "--output_dir", "../models/merged"
            ]
        },
        {
            "name": "Debug Training",
            "type": "python",
            "request": "launch",
            "module": "torch.distributed.launch",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/src/finetuning.py"
            ]
        }
    ]
}